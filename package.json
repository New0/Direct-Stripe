{
  "name": "direct-stripe",
  "repository": "https://github.com/New0/direct-stripe",
  "version": "3.1.0",
  "description": "WordPress plugin for Stripe handled transactions",
  "author": "New0 Nicolas Figueira",
  "license": "GPL-2.0-or-later",
  "main": "src/",
  "scripts": {
    "test": "yarn test:unit && yarn test:e2e:ci",
    "test:unit": "wp-scripts test-unit-js",
    "test:e2e": "cypress open",
    "test:e2e:ci": "cypress run",
    "build": "wp-scripts build",
    "format:js": "wp-scripts format-js",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "start": "wp-scripts start ./src/admin.scss ./src/public.scss ./src/admin.js ./src/public.js ./src/block.js",
    "packages-update": "wp-scripts packages-update",
    "env:start": "wp-env start",
    "env:install": "yarn env:start && yarn env:config",
    "env:config": "wp-env run cli wp rewrite structure %postname%"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "dependencies": {
    "@rmwc/grid": "^6.1.4",
    "@wordpress/api-fetch": "^3.21.5",
    "@wordpress/dom": "^2.16.2",
    "@wordpress/dom-ready": "^2.12.1",
    "@wordpress/element": "^2.19.1",
    "@wordpress/i18n": "^3.18.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@wordpress/env": "^3.0.2",
    "@wordpress/scripts": "^13.0.3",
    "cypress": "^6.6.0"
  }
}
